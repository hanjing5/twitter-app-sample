<%= form_for @micropost do |f| %>
<% if @micropost.errors.any? %>
     <div id="error_explanation">
         <h2><%= pluralize(@micropost.errors.count, "error") %>
             prohibited this <%= f.class.to_s.underscore.humanize.downcase %> from being saved: </h2>
         <p> There were problems with the following fields:</p>
         <ul>
         <% @micropost.errors.full_messages.each do |msg| %>
             <li><%= msg %></li>
         <% end %>
        </ul>
     </div>
 <% end %>

<div class="field">
<%= f.text_area :content %>
</div>
<div class="actions">
<%= f.submit "Submit" %>
</div>
<% end %>

